<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#000000">

    <com.example.admin.mytimewheelclock.AutoRotateSecondView
        android:id="@+id/timeView_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:isShowHalf="false"/>

    <com.example.admin.mytimewheelclock.AutoRotateMinuteView
        android:id="@+id/timeView_minute"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:isShowHalf="false"
        />

    <com.example.admin.mytimewheelclock.AutoRotateHoursView
        android:id="@+id/timeView_hours"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:isShowHalf="false"/>

    <com.example.admin.mytimewheelclock.AutoRotateWeekView
        android:id="@+id/timeView_week"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:isShowHalf="false"/>

    <com.example.admin.mytimewheelclock.AutoRotateDayView
        android:id="@+id/timeView_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:isShowHalf="false"/>

    <com.example.admin.mytimewheelclock.AutoRotateMonthView
        android:id="@+id/timeView_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:isShowHalf="false"/>

    <TextView
        android:id="@+id/timeView_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="4dp"
        android:text="2023"
        android:textColor="#ffffff"
        android:textSize="12dp" />

    <View
        android:id="@+id/v_dividing2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/myshape"
        android:visibility="visible" />



    <Button
        android:id="@+id/bt_skip_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="竖屏"/>
</RelativeLayout>
